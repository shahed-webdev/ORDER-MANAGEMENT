@model ORDER_MANAGEMENT.Data.Territory

@{
    ViewBag.Title = "Update Territory";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="card">
            <div class="card-body">
                <h3 class="mb-3">Update Territory</h3>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.TerritoryID)

                <div class="form-group">
                    <label>Area</label>
                    @Html.DropDownList("AreaID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.AreaID, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Territory Name</label>
                    @Html.EditorFor(model => model.TerritoryName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TerritoryName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>

                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
