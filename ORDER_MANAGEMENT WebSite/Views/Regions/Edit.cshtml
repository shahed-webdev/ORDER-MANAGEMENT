@model ORDER_MANAGEMENT.Data.Region

@{
    ViewBag.Title = "Update Region";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="card">
            <div class="card-body">
                <h3 class="mb-3">Update Region</h3>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.RegionID)

                <div class="form-group">
                    <label>Region Name</label>
                    @Html.EditorFor(model => model.RegionName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RegionName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>

                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}