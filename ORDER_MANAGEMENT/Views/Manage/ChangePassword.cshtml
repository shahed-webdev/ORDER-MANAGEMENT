@model ORDER_MANAGEMENT.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

@section Styles
{
    <style>
        #left-menu { display: none !important }
    </style>
}

@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="container mt-4">
        <div class="card card-body">
            <h3 class="mb-3">Change Password</h3>
            <div class="form-group">
                <label>Old Password</label>
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>New Password</label>
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Confirm Password</label>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Change password" class="btn blue-gradient mb-1 waves-effect waves-light white-text" />
                @Html.ValidationSummary("", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}