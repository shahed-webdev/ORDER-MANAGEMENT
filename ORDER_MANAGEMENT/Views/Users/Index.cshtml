@model IEnumerable<ORDER_MANAGEMENT.Data.UserVM>

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}


<div class="card card-body m-md-3">
    <div class="row">
        <div class="col justify-content-center align-self-center">
            <h3>Users</h3>
        </div>
        <div class="col text-right">
            <a href="/Users/Create" class="btn-floating blue-gradient" title="Add New">
                <i class="fa fa-plus" aria-hidden="true"></i>
            </a>
        </div>
    </div>


    <table id="DataTable" class="table table-sm table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>User Name</th>
                <th>Hierarchy Name</th>
                <th>Personal Contact</th>
                <th>Reporting To</th>
                <th>Joining Date</th>
                <th style="width:30px">Edit</th>
                <th style="width:30px">Locked?</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.UserName
                    </td>
                    <td>
                        @item.HierarchyName
                    </td>
                    <td>
                        @item.PersonalContact
                    </td>
                    <td>
                        @item.ReportingTo
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.JoiningDate)
                    </td>
                    <td>
                        <a class="blue-text" href="/Users/UpdateUsers/@item.RegistrationID"><i class="fas fa-edit"></i></a>
                    </td>
                    <td>
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="@item.RegistrationID" checked>
                            <label class="custom-control-label" for="@item.RegistrationID"></label>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#DataTable').DataTable();

            //$('#DataTable').DataTable({
            //    "aoColumnDefs": [
            //        { 'bSortable': false, 'aTargets': [9,10,11] }
            //    ]
            //});
        });
    </script>
}