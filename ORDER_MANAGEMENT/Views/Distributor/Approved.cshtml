@model ORDER_MANAGEMENT.Data.DistirubtorRegisterVM
@{
    ViewBag.Title = "Approved";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

@section Styles {
    <link href="~/CSS/Login.css" rel="stylesheet" />
}

<div class="container">
    <div class="card card-signin my-3">
        <div class="card-body form-signin">
            <h3 class="mb-3">Approve Distributor</h3>
            @using (Html.BeginForm())
            {  
                @Html.HiddenFor(model => model.DistributorID)
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label>Due Range</label>
                    @Html.TextBoxFor(m => m.DueRange, new { @class = "form-control", min = 1 })
                    @Html.ValidationMessageFor(m => m.DueRange, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Name</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>User Name</label>
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Phone</label>
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Address</label>
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Email</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Password</label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Confirm Password</label>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
                <div class="form-group mt-4">
                    <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit"><i class="fas fa-check mr-1"></i>Approve</button>
                </div>
                @Html.ActionLink("Back to List", "Index")
            }
        </div>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

