@model ORDER_MANAGEMENT.Data.Region

@{
    Layout = null;
}


<div class="modal-dialog modal-notify modal-success" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <p class="heading lead">Add Regions</p>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true" class="white-text">&times;</span>
            </button>
        </div>

        <div class="modal-body">
            @using (Ajax.BeginForm("Create", "Regions", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "OnCreateSuccess" }, new { role = "form" }))
            {
                <div class="form-group">
                    <label>Region Name</label>
                    @Html.EditorFor(model => model.RegionName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RegionName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            }
        </div>
    </div>
</div>



