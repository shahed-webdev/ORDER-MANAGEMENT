@model ORDER_MANAGEMENT.Data.ProductCategory

@{
    Layout = null;
}


<div class="modal-dialog modal-notify modal-success" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <p class="heading lead">Add Product Categories</p>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true" class="white-text">&times;</span>
            </button>
        </div>

        <div class="modal-body">
            @using (Ajax.BeginForm("Create", "ProductCategories", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "OnCreateSuccess" }, new { role = "form" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label>Category Name</label>
                    @Html.EditorFor(model => model.ProductCategoryName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ProductCategoryName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            }
            </div>
        </div>
    </div>

