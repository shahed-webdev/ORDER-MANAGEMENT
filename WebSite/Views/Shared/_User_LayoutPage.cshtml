<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Order Management</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" />
    <!-- Bootstrap core CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />
    <!-- MDB -->
    <link href="~/MDB/mdb_core.css" rel="stylesheet" />
    <!-- datatables -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.18/datatables.min.css" />
    <!-- datatables responsive -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.bootstrap4.min.css" />
    <!-- Sidebar -->
    <link href="~/CSS/SideNavbar.css" rel="stylesheet" />
    <!-- Image croper -->
    <link href="~/CSS/Croper.css" rel="stylesheet" />
    <!-- custom -->
    <link href="~/CSS/Custom.css" rel="stylesheet" />
    @RenderSection("Styles", false)
</head>
<body>
    <div id="sidedrawer" class="d-print-none z-depth-1">
        @Html.Partial("_LoginPartial")

        <ul>
            <li>
                <a href="/UserDashboard/Index">
                    <strong> <span class="fas fa-tachometer-alt"></span> Dashboard</strong>
                </a>
            </li>
            <li>
                <a href="/UserDashboard/UserProfile">
                    <strong> <span class="fas fa-user-circle"></span> Profile</strong>
                </a>
            </li>
            <li></li>
        </ul>
    </div>

    <div id="header">
        <div class="bg-main z-depth-1">
            <div class="container-fluid">
                <div class="d-flex flex-sm-row flex-column">
                    <a class="sidedrawer-toggle d-md-none js-show-sidedrawer d-print-none"><i class="fas fa-bars"></i></a>
                    <a class="sidedrawer-toggle d-none d-md-inline-block js-hide-sidedrawer d-print-none"><i class="fas fa-bars"></i></a>

                    @*<div class="logo-waper text-center text-sm-left">
                            logo
                        </div>*@
                    <div class="InsInfo text-center text-sm-left">
                        <a href="#" title="Go Deshboard" class="white-text" id="InstitutionName">ORDER MANAGEMENT</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <main id="content-wrapper" style="min-height:750px">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </main>

    <footer id="footer" class="page-footer mt-4 wow fadeIn bg-main p-0 d-print-none">
        <div class="footer-copyright text-center py-3">
            © @DateTime.Now.Year Copyright: <a href="#">ordermanagement.com</a>
        </div>
    </footer>

    <!-- JQuery -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="~/MDB/mdb_core.js"></script>
    <!-- datatables -->
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.18/datatables.min.js"></script>
    <!-- datatables responsive -->
    <script type="text/javascript" src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
    <!-- Image croper -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.4/croppie.min.js"></script>
    <!--Sidebar-->
    <script type="text/javascript" src="//cdn.muicss.com/mui-latest/js/mui.min.js"></script>
    <script type="text/javascript" src="~/JS/Basic_Index.js"></script>
    <!--notify js-->
    <script type="text/javascript" src="~/JS/notify.min.js"></script>


    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        $(function () {
            //Back to top
            $('body').append('<div id="toTop" class="btn btn-primary">TOP</div>');
            $(window).scroll(function () {
                if ($(this).scrollTop() != 0) {
                    $('#toTop').fadeIn();
                } else {
                    $('#toTop').fadeOut();
                }
            });

            $('#toTop').click(function () {
                $("html, body").animate({ scrollTop: 0 }, 600);
                return false;
            });
        });

        // Animations initialization
        new WOW().init();
    </script>
</body>
</html>
